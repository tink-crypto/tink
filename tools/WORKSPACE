workspace(name = "tools")

load("@bazel_tools//tools/build_defs/repo:http.bzl", "http_archive")

local_repository(
    name = "tink_base",
    path = "..",
)

local_repository(
    name = "tink_cc",
    path = "../cc",
)

local_repository(
    name = "tink_cc_awskms",
    path = "../kms/cc/aws",
)

